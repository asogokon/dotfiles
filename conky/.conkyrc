# Conky panel config - s0805753 20/06/2012

# Set panel windown properties
own_window yes
own_window_type override
own_window_transparent no
own_window_hints undecorated, sticky,skip_taskbar,skip_pager
background yes

double_buffer yes

use_spacer right
use_xft yes

update_interval 1.0

# Dimensions
minimum_size 2000 10

draw_borders no

uppercase yes

stippled_borders 0

border_width 1

default_color 666666
default_shade_color 101010
default_outline_color 666666

own_window_colour 000000
own_window_transparent no

alignment top_left

gap_x 0
gap_y 0

override_utf8_locale no
xftfont profont:size=10
xftalpha 0.6


TEXT
${iconv_start UTF-8 ISO_8859-1}${color #00B80B}  CPU ${color #3c3c3c}${cpubar cpu1 8,200} ${execi 2 sensors | grep "Core 0" | sed 's/.*\([0-9][0-9]*[0-9]\.[0-9].C\) \(.*\)/\1/g'} ${cpubar cpu2 8,200} ${execi 2 sensors | grep "Core 1" | sed 's/.*\([0-9][0-9]*[0-9]\.[0-9].C\) \(.*\)/\1/g'} ${cpubar cpu3 8,200} ${execi 2 sensors | grep "Core 2" | sed 's/.*\([0-9][0-9]*[0-9]\.[0-9].C\) \(.*\)/\1/g'} ${cpubar cpu4 8,200} ${execi 2 sensors | grep "Core 3" | sed 's/.*\([0-9][0-9]*[0-9]\.[0-9].C\) \(.*\)/\1/g'}${color #00B80B}    |     RAM ${color }$mem/$memmax ${color #3c3c3c}${membar 8,400}${color #00B80B}     |     Network Up ${color }${upspeed eth0} ${color #00B80B}Down ${color } ${downspeed eth0} ${color } ${iconv_stop}
